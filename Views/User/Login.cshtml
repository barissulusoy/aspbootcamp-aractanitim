@model songece.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Master Login Form Widget Tab Form,Login Forms,Sign up Forms,Registration Forms,News letter Forms,Elements"/>
    <script type="application/x-javascript">addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/web3/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="//fonts.googleapis.com/css?family=Cormorant+SC:300,400,500,600,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <style>
        /* Stil ekleyerek inputları düzenle */
        .mail-form-agile .mb-3 {
            margin-bottom: 20px; /* Input alanları arasındaki boşluğu arttır */
            position: relative;
        }

        .mail-form-agile label.form-label {
            font-size: 20px; /* Label'ın font boyutunu büyüt */
            color: #fff;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 10px; /* Label'ı sola kaydırarak iç içe geçmeyi önle */
            pointer-events: none; /* Label'a tıklanabilirlik özelliğini kapat */
        }

        .mail-form-agile input.form-control {
            padding: 15px; /* Input alanlarının padding'ini arttır */
            font-size: 18px; /* Input alanlarının font boyutunu büyüt */
            color: #000; /* Eposta ve parola rengi */
            width: calc(100% - 20px); /* Input alanlarını genişlet ve iç içe geçmeyi önle */
            box-sizing: border-box; /* Padding ve border'ı iç içe ekleyerek genişletmeyi kontrol et */
            background-color: #fff; /* Arka plan rengini beyaz yap */
        }

        .mail-form-agile button.btn-primary {
            padding: 15px 20px; /* Butonun padding'ini arttır */
            font-size: 20px; /* Butonun font boyutunu büyüt */
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            width: 100%; /* Button'ı genişlet */
            box-sizing: border-box; /* Padding ve border'ı iç içe ekleyerek genişletmeyi kontrol et */
        }

        .mail-form-agile button.btn-primary:hover {
            background-color: #0056b3;
        }

        /* Hata mesajlarını beyaz yap */
        .text-danger {
            color: #fff;
        }


        }
    </style>
</head>
<body>
    <div class="padding-all">
        <div class="header">
            <h1>Araç Tartışma Prog</h1>
        </div>
        <div class="design-w3l">
            <div class="mail-form-agile">
                <form action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <br></br>
                        <br></br>
                        <br></br>
                        <input asp-for="Email" name="Email" placeholder="Email..." class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br></br>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <br></br>
                        <br></br>
                        <br></br>
                        <input asp-for="Password"  name="Password" id="Password" placeholder="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Giriş</button>
                </form>
            </div>
            <div class="clear"> </div>

</body>
</html>
